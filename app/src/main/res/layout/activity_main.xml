<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Symbol Image -->
    <ImageView
        android:id="@+id/symbolImageView"
        android:layout_width="120dp"
        android:layout_height="116dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/peakrescue" />

    <TextView
        android:id="@+id/projectNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/symbolImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="35dp"
        android:text="Guardian Angel"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/projectNameTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/projectNameTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="35dp"
        android:text="Peak Rescue"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startNewTrekButton"
        android:layout_width="193dp"
        android:layout_height="75dp"
        android:layout_below="@id/projectNameTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="108dp"
        android:text="Start New Trek"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/checkInExistingTrekButton"
        android:layout_width="238dp"
        android:layout_height="75dp"
        android:layout_below="@id/startNewTrekButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="85dp"
        android:text="CheckIn Existing Trek"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sosButton"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FF0000"
        android:text="SOS" />

</RelativeLayout>
